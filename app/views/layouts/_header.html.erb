<header>
  <div class = "header">
    <div class = "logo_container">
      <%= link_to image_tag("logo_crc.png"), root_path, { :class => "logo" } %>
    </div>
    <div class = "nav_container">
      <nav>
        <ul class = "topnav">
          <li><%= link_to "Clinical Trial Search", '#clinical_trial_search' %></li>
          <li><%= link_to "Clinical Trials 101", '#clinical_trials_101' %></li>
          <li><%= link_to "The FDA Process", '#fda_process' %></li>
          <li><%= link_to "Who We Are", '#who_we_are' %></li>
          <% if logged_in? %>
            <li><%= link_to "Users", '#' %></li>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                Account <b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <li><%= link_to "Profile", current_user %></li>
                <li><%= link_to "Settings", edit_user_path(current_user) %></li>
                <li class="divider"></li>
                <li>
                  <%= link_to "Log Out", logout_path, method: "delete" %>
                </li>
              </ul>
            </li>
          <% else %>
            <li><%= link_to "Log In", login_path %></li>
            <li><%= link_to "Sign Up", signup_path %></li>
          <% end %>
        </ul>
      </nav>
    </div>
  </div>
</header>